<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_200"
                android:text="DAA" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#FF6C76"
                android:text="DSA" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/teal_200"
                android:text="JAVA" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#CF14A3"
                android:text="OS" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="PYTHON"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#1ECF14"
                android:text="SE" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#9EEEFF"
                android:text="CCP" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#AACC55"
                android:text="CPP" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:backgroundTint="#003264"
                android:text="DBMS" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:backgroundTint="#C80032"
                android:text="DE" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>